<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.promociones.AgregarPromocionesActivity">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        android:layout_marginBottom="5dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textNombrePromociones"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nombre Promoción"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toTopOf="@+id/txtNombrePromocion"
                android:layout_marginBottom="5dp"
                />

            <EditText
                android:id="@+id/txtNombrePromocion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/textNombrePromociones"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textDescripcion"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Descripción"
                app:layout_constraintTop_toBottomOf="@+id/txtNombrePromocion"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toTopOf="@+id/txtDescripcion"
                android:layout_marginBottom="5dp"
                />

            <EditText
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/textDescripcion"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textFechaInicio"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textFechaInicio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fecha Inicio"
                app:layout_constraintTop_toBottomOf="@id/txtDescripcion"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toTopOf="@+id/txtFechaInicio"
                android:layout_marginBottom="5dp"
                />

            <EditText
                android:id="@+id/txtFechaInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                app:layout_constraintTop_toBottomOf="@id/textFechaInicio"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textFechaFin"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textFechaFin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fecha Fin"
                app:layout_constraintTop_toBottomOf="@+id/txtFechaInicio"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toTopOf="@+id/txtFechaFin"
                android:layout_marginBottom="5dp"
                />

            <EditText
                android:id="@+id/txtFechaFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                app:layout_constraintTop_toBottomOf="@id/textFechaFin"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toTopOf="@+id/textNombreFranquicia"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:id="@+id/textNombreFranquicia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nombre Sucursal"
                app:layout_constraintTop_toBottomOf="@+id/txtFechaFin"
                android:layout_marginTop="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintBottom_toTopOf="@+id/txtNombreFranquicia"
                android:layout_marginBottom="5dp"
                />

            <Spinner
                android:id="@+id/txtNombreFranquicia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/textNombreFranquicia"
                android:layout_marginTop="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="5dp"
                />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fBtnAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/agregar"
        android:theme="@style/MyFloatingButton"
        app:rippleColor="@color/colorMadera"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        android:layout_marginBottom="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="10dp"
        />


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_inferior" />

</android.support.constraint.ConstraintLayout>