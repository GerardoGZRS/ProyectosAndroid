<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.comisiones.MenuComisionesActivity">
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_inferior" />
    <Button
        android:id="@+id/btnIngresarComision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insertar Comisión"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toTopOf="@+id/btnConsultaComisiones"
        android:layout_marginBottom="5dp"
        />
    <Button
        android:id="@+id/btnConsultaComisiones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta Comisiones"
        app:layout_constraintTop_toBottomOf="@id/btnIngresarComision"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@id/btnEmpleadoComision"
     />
    <Button
        android:id="@+id/btnEmpleadoComision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar Empleado Comision"
        app:layout_constraintTop_toBottomOf="@id/btnConsultaComisiones"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toTopOf="@id/btnEliminarComision"
         />
    <Button
        android:id="@+id/btnEliminarComision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Comisión"
        app:layout_constraintTop_toBottomOf="@id/btnEmpleadoComision"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        />

</android.support.constraint.ConstraintLayout>