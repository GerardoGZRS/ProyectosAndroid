<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.cortesias.MenuCortesiasActivity">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu_inferior" />

    <Button
        android:id="@+id/btnConsultaCortesia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consulta Cortesia"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@id/btnConsultaEmpleadoCortesia"

         />

    <Button
        android:id="@+id/btnConsultaEmpleadoCortesia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empleados Cortesia"
        app:layout_constraintTop_toBottomOf="@id/btnConsultaCortesia"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toTopOf="@id/btnIngresarCortesias">

    </Button>

        <Button
            android:id="@+id/btnIngresarCortesias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresar Cortesias"
            app:layout_constraintTop_toBottomOf="@id/btnConsultaEmpleadoCortesia"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="5dp"
            app:layout_constraintBottom_toTopOf="@+id/btnEliminarCortesia"
            android:layout_marginBottom="5dp"
         />

    <Button
        android:id="@+id/btnEliminarCortesia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eliminar Cortesia"
        app:layout_constraintTop_toBottomOf="@+id/btnIngresarCortesias"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toTopOf="@id/navigation"
        android:layout_marginBottom="5dp"
        />



</android.support.constraint.ConstraintLayout>